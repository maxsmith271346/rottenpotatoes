<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<div class="centered">
  <h1 class="centered-title">Movies</h1>
</div>
<table>
  <thead>
    <tr>
      <th class="<%= 'sorted-asc' if params[:column] == 'title' && params[:order] == 'asc' %>
        <%= 'sorted-desc' if params[:column] == 'title' && params[:order] == 'desc' %>">
        <%= sort_movies("Title", "title") %>
      </th>
      <th class="<%= 'sorted-asc' if params[:column] == 'rating' && params[:order] == 'asc' %>
        <%= 'sorted-desc' if params[:column] == 'rating' && params[:order] == 'desc' %>">
        <%= sort_movies("Rating", "rating") %>
      </th>
      <th class="<%= 'sorted-asc' if params[:column] == 'release_date' && params[:order] == 'asc' %>
        <%= 'sorted-desc' if params[:column] == 'release_date' && params[:order] == 'desc' %>">
        <%= sort_movies("Release Date", "release_date") %>
      </th>
    </tr>
  </thead>
  <tbody>
    <div id="movies">
      <% @movies.each do |movie| %>
        <tr>
          <td><%= link_to movie.title, movie_path(movie, column: params[:column], order: params[:order]) %></td>
          <td><%= movie.rating %></td>
          <td><%= movie.release_date %></td>
        </tr>
      <% end %>
    </div>
  </tbody>
</table>
<div class="centered">
  <%= link_to "New movie", new_movie_path(column: params[:column], order: params[:order]), class: "btn" %>
</div>